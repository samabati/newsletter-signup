  }

  /* Margin */
  .m-t-24 {
    margin-top: 24px;
  }
  .m-b-24 {
    margin-bottom: 24px;
  }
  .m-r-24 {
    margin-right: 24px;
  }
  .m-l-24 {
    margin-left: 24px;
  }

  .m-t-40 {
    margin-top: 40px;
  }
  .m-r-40 {
    margin-right: 40px;
  }
  .m-b-40 {
    margin-bottom: 40px;
  }
  .m-l-40 {

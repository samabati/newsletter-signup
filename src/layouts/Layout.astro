---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="flex just-c align-c bg-p-n flex-container">
      <slot />
    </div>
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap");
  /* CSS RESET */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }
  * {
    margin: 0;
  }
  body {
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
  }
  img,
  picture,
  video,
  canvas,
  svg {
    display: block;
    max-width: 100%;
  }
  input,
  button,
  textarea,
  select {
    font: inherit;
  }
  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    overflow-wrap: break-word;
  }
  #root,
  #__next {
    isolation: isolate;
  }
  html {
    font-size: 62.5%;
    height: 100%;
  }
  body {
    height: 100%;
  }
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  input {
    outline: none;
    border: none;
  }
  button {
    background: none;
    border-style: none;
    cursor: pointer;
  }
  input:-webkit-autofill,
  input:-webkit-autofill:hover,
  input:-webkit-autofill:focus,
  textarea:-webkit-autofill,
  textarea:-webkit-autofill:hover,
  textarea:-webkit-autofill:focus,
  select:-webkit-autofill,
  select:-webkit-autofill:hover,
  select:-webkit-autofill:focus {
    -webkit-box-shadow: 0 0 0px 1000px #ffffff inset !important;
  }

  .flex-container {
    overflow: auto;
    min-height: 100vh;
    padding: 32px 32px 32px 32px;
  }

  @media (max-width: 58rem) {
    .flex-container {
      padding: 0px;
    }
  }

  /* Utility classes */

  /* Fonts */

  body {
    font-family: "Roboto";
    font-weight: 400;
  }

  .bold {
    font-weight: 700;
  }

  .font-s-56 {
    font-size: 5.6rem;
  }

  .font-s-16 {
    font-size: 1.6rem;
  }

  .font-s-12 {
    font-size: 1.2rem;
  }

  .font-lh-150 {
    line-height: 150%;
  }

  .font-lh-100 {
    line-height: 100%;
  }

  .color-w {
    color: var(--white);
  }

  .color-d-n {
    color: var(--dark-navy);
  }

  .color-v {
    color: var(--vermellion);
  }

  /* Colors */
  :root {
    --pale-navy: #36384d;
    --white: #fff;
    --dark-navy: #242742;
    --grey-25: rgba(25, 24, 43, 0.25);
    --vermellion: #ff6155;
  }

  .outline {
    outline: 2px solid red;
  }

  /* Width */
  .w-100 {
    width: 100%;
  }

  /*Height*/
  .h-100 {
    height: 100%;
  }

  /* Flex box */
  .flex {
    display: flex;
  }

  .just-c {
    justify-content: center;
  }

  .just-s-b {
    justify-content: space-between;
  }

  .align-c {
    align-items: center;
  }

  .flex-d-c {
    flex-direction: column;
  }

  .gap-10 {
    gap: 10px;
  }

  .gap-5 {
    gap: 5px;
  }

  /* Background */
  .bg-p-n {
    background-color: var(--pale-navy);
  }

  .bg-d-n {
    background-color: var(--dark-navy);
  }

  .bg-w {
    background-color: var(--white);
  }

  /* Border radius */
  .border-r-36 {
    border-radius: 36px;
  }
  .border-r-8 {
    border-radius: 8px;
  }
  .border-1-g-25 {
    border: 1px solid var(--grey-25, rgba(25, 24, 43, 0.25));
  }
  .border-1-d-n {
    border: 1px solid var(--dark-navy);
  }

  /*Box Shadow*/
  .box-shadow {
    box-shadow: 0px 15px 60px 0px rgba(0, 0, 0, 0.25);
  }

  /*Padding*/
  .p-t-16 {
    padding-top: 16px;
  }
  .p-r-16 {
    padding-right: 16px;
  }
  .p-b-16 {
    padding-bottom: 16px;
  }
  .p-l-16 {
    padding-left: 16px;
  }

  .p-t-24 {
    padding-top: 24px;
  }
